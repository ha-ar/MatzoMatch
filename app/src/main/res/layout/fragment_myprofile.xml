<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/image_1"
            android:background="#d6d6d6"
            android:layout_marginTop="30dp"
            android:src="@drawable/camera"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="25dp"
            android:layout_gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/image_2"
                android:background="#d6d6d6"
                android:layout_marginTop="30dp"
                android:src="@drawable/camera"
                android:layout_gravity="center_horizontal" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/image_3"
                android:background="#d6d6d6"
                android:layout_marginTop="30dp"
                android:src="@drawable/camera"
                android:layout_gravity="center_horizontal" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="15dp"
                android:paddingTop="10dp"
                android:id="@+id/image_4"
                android:background="#d6d6d6"
                android:layout_marginTop="30dp"
                android:src="@drawable/camera"
                android:layout_gravity="center_horizontal" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/image_5"
                android:background="#d6d6d6"
                android:layout_marginTop="30dp"
                android:src="@drawable/camera"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17sp"
            android:background="#f8f8f8"
            android:text="Choose up to 4 more photos "
            android:gravity="center"
            android:textColor="#727272"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"

                android:textColor="#00bfff"
                android:text="My Gender"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginRight="5dp"
                android:background="@drawable/rectangle_shape"
                android:text="I'm a Male"></Button>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="I'm a Female"

                android:textSize="12sp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:background="@drawable/rectangle_shape"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:paddingLeft="30dp"
                android:textColor="#00bfff"
                android:text="My Name"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Waqas"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:paddingLeft="27dp"
                android:textColor="#00bfff"
                android:text="My Age"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="29"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:paddingLeft="27dp"
                android:textColor="#00bfff"
                android:text="My Tagline"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text=""/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"

                android:textColor="#00bfff"
                android:text="My Industry"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                ></TextView>
            <Switch

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:paddingLeft="25dp"
                android:textColor="#00bfff"
                android:text="Job"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                ></TextView>
            <Switch

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:paddingLeft="25dp"
                android:textColor="#00bfff"
                android:text="Job"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                ></TextView>
            <Switch

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:paddingLeft="25dp"
                android:textColor="#00bfff"
                android:text="School"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                ></TextView>
            <Switch

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:paddingLeft="25dp"
                android:textColor="#00bfff"
                android:text="School"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                ></TextView>
            <Switch

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:src="@drawable/rectangle_shape"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/white"
            android:text="Preview My Profile"
            android:background="@android:color/holo_blue_bright"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>